{
  "manifest_version": 2,

  "name": "PlayDat on Kodi",
  "description": "Pushes links to Kodi via jsonrpc",
  "version": "1.0",

  "icons":{
    "16": "icons/k16.png",
    "32": "icons/k32.png",
    "64": "icons/k64.png"
  },

  "browser_action": {
    "default_icon": "icons/k64.png"
  },

  "background":{
    "scripts": ["rsc/jquery.js", "chrome.js"]
  },

  "options_ui":{
    "page": "options/chrome.html",
    "chrome_style": true
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "http://*/",
    "https://ajax.googleapis.com/"
  ]
}
